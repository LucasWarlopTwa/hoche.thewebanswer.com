<section class="legends">
    <aside>
        <h3>Code Couleur</h3>
        <div class="couleurs">
            {% for type in types %}
                <p style="color:{{ type.codeCouleur }};"> {{ type.description|capitalize }}</p>
            {% endfor %}
        </div>
    </aside>
    <aside>
        <h3>Logos</h3>
        <div class="logos">
            {% for category in categories %}
                <span><img src="{{ asset('images/logo/' ~ category.icon) }}" alt="logo"> : {{ category.name }}</span>
            {% endfor %}
        </div>
    </aside>
</section>