<!-- Primary Meta Tags -->
<meta name="title" content="{{ 'app.title'|trans({}, 'global') }}">
<meta name="description" content="{{ 'app.description'|trans({}, 'global') }}">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ 'app.url'|trans({}, 'global') }}">
<meta property="og:title" content="{{ 'app.title'|trans({}, 'global') }}">
<meta property="og:description" content="{{ 'app.description'|trans({}, 'global') }}">
<meta property="og:image" content="{{ 'app.url'|trans({}, 'global') }}{{ 'app.image.share'|trans({}, 'global') }}">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ 'app.url'|trans({}, 'global') }}">
<meta name="twitter:creator" content="@LucasWarlop">
<meta name="twitter:site" content="@thewebanswer">
<meta property="twitter:title" content="{{ 'app.title'|trans({}, 'global') }}">
<meta property="twitter:description" content="{{ 'app.description'|trans({}, 'global') }}">
<meta property="twitter:image" content="{{ 'app.url'|trans({}, 'global') }}{{ 'app.image.share'|trans({}, 'global') }}">